---
import 'bootstrap/dist/css/bootstrap.min.css';
import { Navbar } from 'astro-bootstrap';
import type { NavbarItemType } from 'astro-bootstrap';

const siteTitle = 'Astro site'; // pull this in from a config file

const id = 'navbarDemo';

---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>KeshavSoft - Software Developers</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        overflow-x: hidden;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
      }

      .hero-section {
        min-height: 100vh;
        position: relative;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
    /* Use a local image placed in public/assets/hero.jpg */
    background: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)),
        url(../assets/bwca-day.png) center/cover no-repeat;
    background-attachment: fixed;
      }

      /* Top Navigation Bar */
      .top-nav {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1000;
        padding: 20px 0;
        background: rgba(0, 0, 0, 0.3);
        backdrop-filter: blur(10px);
        transition: all 0.3s ease;
      }

      .top-nav.scrolled {
        background: rgba(0, 0, 0, 0.8);
        padding: 15px 0;
      }

      /* Navbar custom styles moved from inline style to class so component props do not need 'style' */
      .navbar-custom {
        background: linear-gradient(135deg, rgba(255,255,255,0.06), rgba(255,255,255,0.03));
        border: 1px solid rgba(255,255,255,0.12);
        backdrop-filter: blur(10px) saturate(120%);
        -webkit-backdrop-filter: blur(10px) saturate(120%);
        box-shadow: 0 8px 24px rgba(0,0,0,0.25);
        border-radius: 12px;
      }

      .phone-number {
        color: white;
        font-size: 1.1rem;
        font-weight: 500;
        text-decoration: none;
        letter-spacing: 1px;
        transition: color 0.3s ease;
      }

      .phone-number:hover {
        color: #ff6347;
      }

      .social-icons {
        display: flex;
        gap: 20px;
        align-items: center;
      }

      .social-icon {
        color: white;
        font-size: 1.2rem;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        transition: all 0.3s ease;
        text-decoration: none;
        background: rgba(255, 255, 255, 0.1);
      }

      .social-icon:hover {
        background: rgba(255, 255, 255, 0.2);
        color: white;
        transform: translateY(-3px);
      }

      .btn-internship {
        background: transparent;
        color: white;
        border: 2px solid white;
        padding: 8px 20px;
        border-radius: 5px;
        font-weight: 500;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
      }

      .btn-internship:hover {
        background: white;
        color: #333;
      }

      .btn-our-work {
        background: #ff6347;
        color: white;
        border: 2px solid #ff6347;
        padding: 8px 25px;
        border-radius: 25px;
        font-weight: 600;
        transition: all 0.3s ease;
        text-decoration: none;
        text-transform: uppercase;
        letter-spacing: 0.5px;
      }

      .btn-our-work:hover {
        background: #ff4500;
        border-color: #ff4500;
        color: white;
        transform: scale(1.05);
      }

      /* Hero Content */
      .hero-content {
        text-align: center;
        color: white;
        z-index: 2;
        animation: fadeInUp 1s ease-out;
      }

      .company-name {
        font-size: clamp(3rem, 10vw, 7rem);
        font-weight: 700;
        margin-bottom: 20px;
        text-shadow: 2px 2px 20px rgba(0, 0, 0, 0.5);
        letter-spacing: 2px;
        animation: fadeInUp 1s ease-out 0.2s backwards;
      }

      .tagline {
        font-size: clamp(1.5rem, 3vw, 2.5rem);
        font-weight: 300;
        margin-bottom: 40px;
        text-shadow: 1px 1px 10px rgba(0, 0, 0, 0.5);
        border-bottom: 2px solid white;
        display: inline-block;
        padding-bottom: 10px;
        animation: fadeInUp 1s ease-out 0.4s backwards;
      }

      .cta-text {
        font-size: 1.2rem;
        margin-top: 60px;
        opacity: 0.9;
        text-decoration: underline;
        animation: fadeInUp 1s ease-out 0.6s backwards;
        cursor: pointer;
        transition: opacity 0.3s ease;
      }

      .cta-text:hover {
        opacity: 1;
      }

      @keyframes fadeInUp {
        from {
          opacity: 0;
          transform: translateY(30px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      /* Scroll Indicator */
      .scroll-indicator {
        position: absolute;
        bottom: 30px;
        left: 50%;
        transform: translateX(-50%);
        animation: bounce 2s infinite;
      }

      .scroll-indicator i {
        color: white;
        font-size: 2rem;
        opacity: 0.7;
      }

      @keyframes bounce {
        0%, 20%, 50%, 80%, 100% {
          transform: translateX(-50%) translateY(0);
        }
        40% {
          transform: translateX(-50%) translateY(-10px);
        }
        60% {
          transform: translateX(-50%) translateY(-5px);
        }
      }

      /* Responsive */
      @media (max-width: 768px) {
        .top-nav {
          padding: 15px 0;
        }

        .social-icons {
          gap: 10px;
        }

        .social-icon {
          width: 35px;
          height: 35px;
          font-size: 1rem;
        }

        .phone-number {
          font-size: 0.9rem;
        }

        .btn-our-work {
          padding: 6px 20px;
          font-size: 0.9rem;
  <Navbar class="navbar-expand-lg top-nav glassmorph navbar-custom" data-bs-theme="dark">

        .company-name {
          letter-spacing: 1px;
        }
      }
    </style>
  </head>
  <body>
	
    <!-- Hero Section -->
    <section class="hero-section">
      <div class="hero-content">
        <h1 class="company-name">Screenova</h1>
        <h5>Software Developers</h5>
        <p class="cta-text">Get in touch to discuss your project â€” we're ready to help.</p>
      </div>
    </section>
  </body>
</html>